{% macro searchFilterTags(model) %}
  <div class="govuk-body">
    {% for key, items in model.tags %}
      {% if items.length %}
        <div class="govuk-!-padding-1 govuk-!-font-size-16 {% if loop.index % 2 != 0 %} mpdp-bg-colour-light-grey {% endif %}">
          <div class="mpdp-float-left govuk-!-margin-1 govuk-!-font-weight-bold govuk-!-padding-top-1">{{ key }}</div>
          {% for item in items %}
            <div class="mpdp-display-inline-block">
              {% if loop.first === false %}
                <div class="mpdp-float-left govuk-!-margin-1">
                  <span>or</span>
                </div>
              {% endif %} 
              <button 
                type="button" 
                class="govuk-button govuk-button--secondary mpdp-button" 
                onClick="const searchForm=document.getElementById('search-form');searchForm.querySelectorAll('input[type=&quot;checkbox&quot;][value=&quot;{{ item.value }}&quot;]')[0].checked=false;searchForm.submit()"
              >
                <span class="govuk-!-font-size-24 mpdp-tag-filter-cross">&times;</span>
                <span class="govuk-!-margin-left-5">{{ item.text }}</span>
              </button>
            </div>
          {% endfor %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
{% endmacro %}
