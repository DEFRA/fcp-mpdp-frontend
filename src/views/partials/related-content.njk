<div class="govuk-body">
  <hr class="govubk-section-break govuk-section-break--visible section-break-heading govuk-!-margin-bottom-3 govuk-!-margin-top-0 mpdp-hr-colour-blue" role="presentation">
  <p class="govuk-!-font-size-19 govuk-!-margin-bottom-2" id="related-content">
    <b>Related content</b>
  </p>
  <ul id="related-content-list" class="govuk-list">
    {% for link in relatedContentLinks %}
      <li>
        <a class="govuk-link govuk-!-font-size-16" href="{{ link.url }}" id="{{ link.id }}" target="_blank" rel="noopener noreferrer">{{ link.text }}</a><br>
      </li>
    {% endfor %}
  </ul>
</div>
